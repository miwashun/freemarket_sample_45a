.gray-background
    .user-page
        .user-page__content
            .mypage
                .mypage__wrap
                    .mypage__wrap-top
                        = image_tag "https://static-mercari-jp-imgtr2.akamaized.net/images/mercari_profile.png", class: :"mypage__image"
                        .h2#name 名前
                        .mypage__wrap-top-number
                            .h2#valuation 評価数
                            %span.num 0
                            .h2#exhibit 出品数
                            %span.num 0
                    .mypage-tab-container-1.hidden.active
                        .mypage-tab-notification
                            %ul.mypage-tab-notification__tabs
                                %li.tab.focus
                                    %h3 お知らせ
                                %li.tab.do
                                    %h3 やることリスト
                        .mypage-notification
                            %ul.mypage-notification__data
                                %li.mypage-notification__data__list
                                    =image_tag "https://static-mercari-jp-imgtr2.akamaized.net/images/mercari_profile.png", class: :"mypage-notification__data__list-image"
                                    .mypage-notification__data__list__detail
                                        %p.mypage-notification__data__list__detail-text 事務局から個別メッセージ
                                        .mypage-notification__data__list__detail-time
                                            %i.icon-time
                                            %span １６時間前
                                        %i.icon-chevron-right
                        .notification-contain
                            .notification-contain__btn
                                .notification-contain__btn__text 一覧を見る
                        // やること起動
