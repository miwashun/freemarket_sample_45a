                            %option 長野県
                            %option 富山県
                            %option 石川県
                            %option 福井県
                            %option 愛知県
                            %option 岐阜県
                            %option 静岡県
                            %option 三重県
                            %option 大阪府
                            %option 兵庫県
                            %option 京都府
                            %option 滋賀県
                            %option 奈良県
                            %option 和歌山県
                            %option 鳥取県
                            %option 島根県
                            %option 岡山県
                            %option 広島県
