.header-reg
  %h1
    = link_to image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?1278822302",class: "log__item"), '/'
  .header-reg__container
    %ul.progressbar
      %li.thlough
        会員情報
        .progressbar-status#first
      %li.thlough
        電話番号認証
        .progressbar-status
      %li.active
        お届け先住所入力
        .progressbar-status
      %li 
        お支払い方法
        .progressbar-status
      %li 
        完了
        .progressbar-status#last

.gray-background
  .address
    .address__top
      %p.address__text2 お届け先住所入力
    .address__bottoms
      .form-boxs#address-forms
        = form_for [@user, @address] do |f|
          .form-boxs__width
            %label.form-boxs__label お名前
            %span.form-boxs__label-req 必須
            = f.text_field :name, class:'address-form', placeholder:"例)山田太郎"
          .form-boxs__width
            %label.form-boxs__label お名前カナ
            %span.form-boxs__label-req 必須
            = f.text_field :name_kana, class:'address-form', placeholder:"例）ヤマダタロウ"
          .form-boxs__width
            %label.form-boxs__label 郵便番号
            %span.form-boxs__label-req 必須
            = f.text_field :zip, class:'address-form', placeholder:"例）112-0012"
          .form-boxs__width
            %label.form-boxs__label 都道府県
            %span.form-boxs__label-req 必須
            = f.collection_select :prefecture, Prefecture.all, :name, :name, {class:'address-form', placeholder:"例）東京都"}
          .form-boxs__width
            %label.form-boxs__label 市区町村 番地
            %span.form-boxs__label-req 必須
            = f.text_field :address_detail, class:'address-form', placeholder:"例）新宿区 1-2-3"
          .form-boxs__width
            %label.form-boxs__label 電話
            %span.form-boxs__label-with 任意
            = f.text_field :phone_number, class:'address-form', placeholder:"例）09012345678"
          = f.submit '次へ進む', class:'next'
= render 'items/footer-buy'