= render 'items/header'
= render 'items/header-nav'
%main.container-main
  %section.chapter-container
    %h2.chapter-container__head クレジットカード情報入力
    %form#add-card-form.chapter-container__inner{action: "/users/#{params["user_id"]}/cards", method: "POST"}
      %script{type: "text/javascript", src: "https://js.pay.jp/"}
      .l-single-content
        .form-group
          %label{for: "payment_card_no"} カード番号
          %span.form-group__require 必須
          %input#payment_card_no.input-default{ data: {input: {type: "card"}}, maxlength: "19", placeholder: "半角数字のみ", type: "text", :value => ""}/
          %ul.signup-card-list
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2855175014", width: "49"}/
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?2855175014", width: "34"}/
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?2855175014", width: "30"}/
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?2855175014", width: "32"}/
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?2855175014", :width => "21"}/
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?2855175014", width: "32"}/
            %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?2855175014", width: "32"}/
        .form-group
          %label{for: "payment_card_expire"} 有効期限
          %span.form-group__require 必須
          %br/
          .select-wrap1
            %select#payment_card_expire_mm.select-wrap1__default
              %option{value: "01"} 01
              %option{value: "02"} 02
              %option{value: "03"} 03
              %option{value: "04"} 04
              %option{value: "05"} 05
              %option{value: "06"} 06
              %option{value: "07"} 07
              %option{value: "08"} 08
              %option{value: "09"} 09
              %option{value: "10"} 10
              %option{value: "11"} 11
              %option{value: "12"} 12
            %i.far.fa-angle-down
          %span 月
          %ul#expire-mm-error-wrapper.has-error-text
          .select-wrap1
            %select#payment_card_expire_yy.select-wrap1__default
              %option{value: "2019"} 19
              %option{value: "2020"} 20
              %option{value: "2021"} 21
              %option{value: "2022"} 22
              %option{value: "2023"} 23
              %option{value: "2024"} 24
              %option{value: "2025"} 25
              %option{value: "2026"} 26
              %option{value: "2027"} 27
              %option{value:"2028"} 28
              %option{value: "2029"} 29
            %i.far.fa-angle-down
          %span 年
          %ul#expire-yy-error-wrapper.has-error-text
        .form-group
          %label{for: "payment_card_security_code"} セキュリティコード
          %span.form-group__require 必須
          %input#payment_card_security_code.input-default{placeholder: "カード背面4桁もしくは3桁の番号", type: "number", value: ""}/
          %ul#security-code-error-wrapper.has-error-text
          .signup-seqcode
            .signup-seqcode__text{ data: { js: "show-tips-toggle"}}
              %span.form-question> ?
              カード裏面の番号とは？
        %button#submit-button.btn-default.btn-red
          追加する
  = render 'users/sidebar'
= render 'items/footer'
= render 'items/footer-sell-btn'
