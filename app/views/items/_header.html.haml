%header.header
  .header-inner
    .logo-bar
      %h1.logo
        = link_to root_path do
          %img{alt: "mercari", height: "36", src: "//www-mercari-jp.akamaized.net/asses/img/common/common/logo.svg?128691313", width: "134"}/
      %form.header-form{action: "https://www.mercari.com/jp/search/"}
        %input.input-default{name: "keyword", placeholder: "キーワードから探す", type: "search", value: ""}/
        = fa_icon 'search', class: 'icon'
    .header-nav-box
      .left-nav
        %ul.search-nav
          %li.nav-list
            %h2.nav-list__title
              = link_to root_path, class: "nav-list__category" do
                カテゴリーから探す
          %li.nav-list
            %h2.nav-list__title
              = link_to "https://www.mercari.com/jp/category/", class: "nav-list__brand" do
                ブランドから探す
      .right-nav
        %ul.user-nav
          - unless user_signed_in?
            %li.user-nav__list
              = link_to "ログイン", root_path, class: "user-nav__list__link-sign-in"
            %li.user-nav__list
              = link_to "新規会員登録", root_path, class: "user-nav__list__link-sign-up"
          -else
            %li.user-nav__list
              = link_to root_path, class: "user-nav__list__link" do
                %figure.mypage-icon
                  .mypage-icon__conteiner
                    = image_tag "//static-mercari-jp-imgtr2.akamaized.net/images/member_photo_noimage_thumb.png", alt: "", width: "32"
                    %p マイページ
            %li.user-nav__list
              = link_to "#", class: "user-nav__list__link" do
                %i.far.fa-bell
                %p お知らせ
            %li.user-nav__list
              = link_to "https://www.mercari.com/jp/mypage/", class: "user-nav__list__link" do
                = fa_icon 'check'
                %p やることリスト
